!!! 5
%html
  %head
    %title
      = yield(:title) || APPLICATION_TITLE
    = csrf_meta_tag
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'map.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'

    = javascript_include_tag 'jquery.min'
    = javascript_include_tag 'application.js'
    = javascript_include_tag 'http://www.openlayers.org/dev/OpenLayers.js'
    = javascript_include_tag 'http://svn.osgeo.org/metacrs/proj4js/trunk/lib/proj4js-combined.js'
    / = stylesheet_link_tag 'http://www.openlayers.org/dev/theme/default/style.css', :cache => true
    %link{ :href=>"http://www.openlayers.org/dev/theme/default/style.css", :media=>"screen", :rel=>"stylesheet", :type=>"text/css"}

    / install uniform for nicer forms
    = javascript_include_tag 'jquery.uniform.min', :cache => true
    = javascript_include_tag "highcharts", :cache => true
    = stylesheet_link_tag '/javascripts/css/uniform.default.css', :cache => true
    
    :javascript
      $(function(){
        // $("select, input[type=checkbox], input[type=radio], input[type=file], input[type=submit], a.button, button").uniform();
        $("input, text, submit, textarea, select, button").uniform();        
      });    
    = yield(:head)
  %body.bp
    #header
      #header_content
        %h2 
          Rapid Impact Assessment Tool (RIAT)

    = yield

    #footer.bp
      #footer_content
        #footer_left
          %ul
            %li 
              %a{:href => "http://www.aifdr.org/public"} AIFDR
            %li 
              %a{:href => "/static/about"} About
            %li 
              %a{:href => "/static/contact"} Contact
        #footer_right
          %ul
            %li 
              %a{:href => "/static/docs"} Documentation
            %li 
              %a{:href => "/static/api"} About
            %li 
              %a{:href => "/static/contribute"} Contribute
          
